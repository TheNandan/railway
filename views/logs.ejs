<%- include('partials/_header') %>
<%- include('partials/_notify') %>
<%- include('partials/_nav') %>
<% if (auth) { %>
    <h5 class="ms-1 mb-1 position-absolute bottom-0 text-primary-emphasis">Status : <span class="text-success">Active</span></h5>
<% }else{ %>
    <h5 class="ms-1 mb-1 position-absolute bottom-0 text-primary-emphasis">Status : <span class="text-danger">InActive</span></h5>
<% } %>

    <h1 class="text-center text-primary my-3">Search Logs <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24"><g transform="rotate(90 12 12)"><path fill="blue" d="m18.9 20.3l-5.6-5.6q-.75.6-1.725.95T9.5 16q-2.725 0-4.612-1.888T3 9.5q0-2.725 1.888-4.612T9.5 3q2.725 0 4.612 1.888T16 9.5q0 1.1-.35 2.075T14.7 13.3l5.625 5.625q.275.275.275.675t-.3.7q-.275.275-.7.275t-.7-.275ZM9.5 14q1.875 0 3.188-1.313T14 9.5q0-1.875-1.313-3.188T9.5 5Q7.625 5 6.312 6.313T5 9.5q0 1.875 1.313 3.188T9.5 14Z"/></g></svg></h1>
<h5 class="text-danger text-center mb-3">Total <%= logcount %> Logs Found !</h5>
<div class="container">
    <table class="table text-center"> 
        <thead class="bg-primary-subtle text-primary">
            <th>#</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Searched Date</th>
            <th>Result</th>
            <th>Searched By</th>
            <th>Searched On</th>
        </thead>
        <tbody>
            <% logs.forEach((log,index) => { %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><%= log.source %></td>
                    <td><%= log.destination %></td>
                    <td><%= log.searchdate %></td>
                    <td><h5 class="text-<%= log.result == 'yes' ? 'success':'danger' %> bg-<%= log.result == 'yes' ? 'success':'danger' %>-subtle rounded-2 py-2" ><%= log.result %></h5></td>
                    <td><%= log.searchedBy %></td>
                    <td><%= log.searchedOn %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>





<%- include('partials/_footer') %>