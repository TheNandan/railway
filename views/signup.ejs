<%- include('partials/_header') %>

<%- include('partials/_notify') %>

<div class="container mt-5">
    <h1 class="text-center text-primary-emphasis">Railway | Sign Up</h1>
</div>

<!-- Sign Up Form -->
<div class="container my-5">

    <div class="row">
        <div class="col col-lg-6 mx-auto">
          <div class="card shadow-lg border border-0 rounded-2">
            <div class="card-title text-center p-3 mb-2 bg-primary-subtle my-auto rounded-top">
              <h4 class="text-primary-emphasis ">Sign Up</h4>
            </div>
            <div class="card-body">
              <form action="/signup" method="post">
    
              <!-- email -->
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="exampleFormControlInput1"
                  placeholder="Email address"
                  name="email"
                />
              </div>
    
              <!-- password -->
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="exampleFormControlInput1"
                  placeholder="Password"
                  name="password"
                />
              </div>
    
              <!-- confirm password -->
              <div class="mb-5">
                <label for="exampleFormControlInput1" class="form-label">Confirm Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="exampleFormControlInput1"
                  placeholder="Confirm Password"
                  name="cpassword"
                />
              </div>
    
              <div class="container mx-auto text-center">
                    <button type="submit" class="btn btn-lg bg-primary-subtle text-primary-emphasis">
                      Sign up
                    </button>
              </div>
            </form>
            </div>
          </div>
        </div>
      </div>

</div>

<!-- Sign In link -->
<div class="container text-center">
    <p>Already have an account? <a href="/signin">Login here</a></p>
</div>
